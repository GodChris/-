	<script type="text/javascript">
		$(document).ready(function() {
			$("#flip").click(function() {
				$("#panel").slideToggle("slow");
			});
		});
		/*
		还有：slideUp()和slideDown()两个函数，一样
		*/
	</script>
	<style type="text/css" media="screen">
		#panel,#flip
{
	padding:5px;
	text-align:center;
	background-color:#e5eecc;
	border:solid 1px #c3c3c3;
}
#panel
{
	padding:50px;
	display:none;
}
	</style>
